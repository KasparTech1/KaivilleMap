# Example environment variables for KaivilleMap
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_DB_PASSWORD=your-db-password
SUPABASE_ACCESS_TOKEN=your-access-token

# React App Configuration (for local development)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# Production URLs (Railway will override these)
RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
PUBLIC_URL=https://your-app.up.railway.app

# LLM Configuration (for Research Center formatting)
# Choose provider: openai, anthropic, or azure
LLM_PROVIDER=openai

# OpenAI Configuration (Railway uses OPENAI_KEY)
OPENAI_KEY=sk-...your-key-here...
# Alternative env var name (for local development)
# OPENAI_API_KEY=sk-...your-key-here...

# Anthropic Configuration (alternative to OpenAI)
# ANTHROPIC_API_KEY=sk-ant-...your-key-here...

# Azure OpenAI Configuration (enterprise option)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_KEY=your-azure-key-here

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview  # or claude-3-opus-20240229
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3  # Lower = more focused/deterministic

# Research Center Configuration
AUTO_APPROVE_RESEARCH=false  # Set to true to auto-publish submissions (dev/testing)
# RESEARCH_MOD_TOKEN=your-secret-mod-token  # For future moderation endpoints